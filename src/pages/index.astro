// ğŸŒ Imports
import Layout from '~/layouts/Layout.astro';
import fs from 'node:fs/promises';
import path from 'node:path';

// ğŸ§­ Robust Featured Product Loader
let featured = [];

try {
  // âœ… Resolve path relative to current module file
  const productsDir = new URL('../src/content/products', import.meta.url).pathname;
  console.log('Resolved productsDir:', productsDir);

  const files = (await fs.readdir(productsDir))
    .filter(f => f.endsWith('.json'))
    .sort(); // predictable order

  if (!files.length) console.warn('âš ï¸ No JSON files found in products directory');

  const all = await Promise.all(
    files.map(async (file) => {
      try {
        const raw = await fs.readFile(`${productsDir}/${file}`, 'utf-8');
        const data = JSON.parse(raw);
        return {
          slug: file.replace('.json', ''),
          title: data.title,
          description: data.description,
          image: data.image,
        };
      } catch (err) {
        console.warn(`ğŸš« Failed to parse ${file}:`, err);
        return null;
      }
    })
  );

  featured = all.filter(Boolean).slice(-3);
  console.log('âœ… Featured products:', featured.length);
} catch (err) {
  console.error('âŒ Error loading featured products:', err);
}
