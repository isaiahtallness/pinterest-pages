---
import Layout from '~/layouts/Layout.astro';
import fs from 'node:fs/promises';
import path from 'node:path';

const productsDir = path.resolve('./src/content/products');
const files = await fs.readdir(productsDir);

const featured = await Promise.all(
  files
    .filter(file => file.endsWith('.json')) // ✅ Ensure only JSON files
    .sort() // Optional: alphabetical sort for predictability
    .slice(-3) // ✅ Grab the latest 3
    .map(async (file) => {
      const data = JSON.parse(await fs.readFile(`${productsDir}/${file}`, 'utf-8'));
      return {
        slug: file.replace('.json', ''),
        title: data.title,
        description: data.description,
        image: data.image,
      };
    })
);
---

<Layout>
  <main class="bg-slate-900 text-white min-h-screen">
    <!-- 🍊 Accent bar (changed to white) -->
    <div class="w-full h-3 bg-white"></div>

    <!-- 🖼️ Hero Banner Strip - cleaned up -->
    <section class="relative h-[260px] sm:h-[300px] md:h-[360px] flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="/dealfinder-logo2.jpeg"
          alt="DealFinder Banner"
          class="w-full object-cover object-center h-full scale-[1.2]"
        />
      </div>
    </section>

    <!-- 🌟 Featured Products Section -->
    <section class="pt-10 pb-16 px-6 sm:px-8 max-w-7xl mx-auto">
      <h2 class="text-3xl font-bold text-center text-white mb-10">Featured Picks</h2>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {featured.map((item) => (
          <div class="bg-slate-800 rounded-xl shadow-xl p-6 hover:shadow-2xl transition-shadow duration-300">
            <div class="w-full aspect-[4/3] rounded-md overflow-hidden">
              <img
                src={item.image}
                alt={item.title}
                class="w-full h-full object-cover scale-105 hover:scale-110 transition-transform duration-300"
              />
            </div>
            <h3 class="text-xl font-semibold text-white/90 mt-4">{item.title}</h3>
            <p class="text-white/70 text-sm mt-2">{item.description}</p>
            <a
              href={`/products/${item.slug}`}
              class="text-orange-400 hover:text-orange-300 font-medium mt-4 inline-block"
            >
              Shop Now →
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- 🔧 Value Proposition -->
    <section class="py-16 px-6 sm:px-8 max-w-5xl mx-auto grid gap-12 lg:grid-cols-3 text-white/70">
      <div class="text-center">
        <h3 class="text-xl font-semibold text-white mb-3">Authentic Curation</h3>
        <p class="text-sm">Every pick is hand-selected based on quality, reviews, and usefulness — no fluff, no gimmicks.</p>
      </div>
      <div class="text-center">
        <h3 class="text-xl font-semibold text-white mb-3">Data Meets Taste</h3>
        <p class="text-sm">Behind every recommendation is a system built on experience, user signals, and smart automation.</p>
      </div>
      <div class="text-center">
        <h3 class="text-xl font-semibold text-white mb-3">Affiliate Transparency</h3>
        <p class="text-sm">We may earn commissions from links — but every product earns its spot with genuine value.</p>
      </div>
    </section>

    <!-- 🧭 CTA -->
    <section class="text-center py-16 bg-gradient-to-r from-slate-800 to-slate-900 text-white">
      <h2 class="text-3xl sm:text-4xl font-bold mb-6">Your Next Favorite Find Starts Here</h2>
      <a
        href="/products"
        class="btn btn-primary text-lg px-10 py-3 rounded-full bg-orange-500 hover:bg-orange-600 transition-colors duration-300"
      >
        Browse All Categories
      </a>
      <p class="mt-6 text-sm text-white/60">Curated. Reviewed. Trusted. #ad</p>
    </section>
  </main>
</Layout>
